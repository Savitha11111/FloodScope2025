# FloodScope AI Docker Environment Configuration
# This file contains the environment setup for the complete Docker image

# Application Configuration
APP_NAME="FloodScope AI"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# Server Configuration
PORT=5000
HOST=0.0.0.0

# API Keys (These should be provided when running the container)
# OPENWEATHER_API_KEY=your_openweather_api_key_here
# AMBEE_API_KEY=your_ambee_api_key_here
# COHERE_API_KEY=your_cohere_api_key_here

# Email Configuration (Optional - for alert functionality)
# GMAIL_USER=your_gmail_address
# GMAIL_APP_PASSWORD=your_gmail_app_password

# Cache and Performance Settings
CACHE_TTL=3600
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_EMAIL_ALERTS=true
ENABLE_CHAT_ASSISTANT=true
ENABLE_ADVANCED_ANALYSIS=true
ENABLE_REAL_TIME_MONITORING=true

# Data Sources Configuration
DEFAULT_LOCATION="Mumbai, India"
DEFAULT_COORDINATES="19.0760,72.8777"
ANALYSIS_RADIUS_KM=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Security Settings
SESSION_TIMEOUT=3600
CORS_ENABLED=false
XSRF_PROTECTION=false